FROM node:16-alpine3.11 AS builder

ARG REACT_APP_ENVIRONMENT
ARG REACT_APP_API_URL
ARG REACT_APP_SENTRY_DSN
ARG REACT_APP_WS_URL
ARG REACT_APP_ROBOKASSA_MERCHANT_LOGIN
ARG REACT_APP_ROBOKASSA_PASSWORD

ENV REACT_APP_ENVIRONMENT=${REACT_APP_ENVIRONMENT}
ENV REACT_APP_API_URL=${REACT_APP_API_URL}
ENV REACT_APP_SENTRY_DSN=${REACT_APP_SENTRY_DSN}
ENV REACT_APP_WS_URL=${REACT_APP_WS_URL}
ENV REACT_APP_ROBOKASSA_MERCHANT_LOGIN=${REACT_APP_ROBOKASSA_MERCHANT_LOGIN}
ENV REACT_APP_ROBOKASSA_PASSWORD=${REACT_APP_ROBOKASSA_PASSWORD}

WORKDIR /app

COPY package.json .

RUN yarn install --production

COPY . .

RUN yarn build

FROM nginx:1.21.1-alpine as production

COPY --from=builder /app/build /usr/share/nginx/html

COPY dockerfiles/nginx/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
